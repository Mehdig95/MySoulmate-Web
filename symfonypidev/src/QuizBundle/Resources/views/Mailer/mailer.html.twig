{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-section-pt text-white text-center" style="background: url({{ asset('assets/images/pattern/04.png') }}) no-repeat 0 0; background-size: cover;">

    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <div class="row mb-50">

                <div class="row">
                    <div class="col-sm-12 mb-30">
                        <h4 class="title divider-3">We Love Talking</h4>
                    </div>
                    <div class="col-sm-12">
                        <div id="formmessage" style="display:none">Success/Error Message Goes Here</div>
                        <form id="contactform" class="main-form" role="form" method="post" >
                            <div class="form-group half-group">
                                <div class="input-group">
                                    <input id="name" placeholder="Your name here" class="form-control" name="name" type="text">
                                </div>
                            </div>

                            <div class="form-group half-group">
                                <div class="input-group">
                                   {{ form_widget(form.to) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    {{ form_widget(form.subject) }}
                                </div>
                            </div>
                            <br>
                            <div class="form-group">

                                {{ form_row(form._token) }}
                               {{   form_widget(form.Send) }}
                            </div>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}