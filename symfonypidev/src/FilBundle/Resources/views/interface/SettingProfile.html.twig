{% extends 'base.html.twig' %}
{% block title %} Setting {% endblock %}
{% block body %}



    <!-- Wrap -->
    <section class="inner-intro bg bg-fixed bg-overlay-black-60" >
        <div class="container">


            </div>

        </div>
    </section>


    <section class="login-form register-img dark-bg page-section-ptb" >
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="login-1-form register-1-form clearfix text-center">
                        <h4 class="title divider-3 text-white mb-30">CONFIGURATE PROFILE</h4>
                        {{ form_start(form)}}
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="glyph-icon flaticon-user"></i>
                                {{ form_widget(form.FirstName, {'attr': {'class': 'input-text','placeholder':'First Name' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="glyph-icon flaticon-user"></i>
                                {{ form_widget(form.LastName, {'attr': {'class': 'input-text','placeholder':'Last Name' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="fa fa-envelope-o" aria-hidden="true"></i>

                                {{ form_widget(form.numTel, {'attr': {'class': 'input-text','placeholder':'phone number' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="glyph-icon flaticon-padlock"></i>
                                {{ form_widget(form.Emploi, {'attr': {'class': 'input-text','placeholder':'Emploi' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="glyph-icon flaticon-padlock"></i>
                                {{ form_widget(form.cin, {'attr': {'class': 'input-text','placeholder':'cin' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                                {{ form_widget(form.Country, {'attr': {'class': 'input-text','placeholder':'state' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="fa fa-briefcase" aria-hidden="true"></i>
                                {{ form_widget(form.Etat, {'attr': {'class': 'input-text','placeholder':'City' }}) }}
                            </div>
                        </div>
                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="fa fa-briefcase" aria-hidden="true"></i>
                                {{ form_widget(form.rue, {'attr': {'class': 'input-text','placeholder':'Street' }}) }}
                        </div>
                            <div class="section-field mb-30">
                                <div class="field-widget">
                                    <i class="fa fa-briefcase" aria-hidden="true"></i>
                                    {{ form_widget(form.codePostale, {'attr': {'class': 'input-text','placeholder':'zip code' }}) }}
                                </div>
                            </div>
                            <div class="section-field mb-30">
                                <div class="field-widget">
                                    {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                        <div class="clearfix"></div>
                        <div class="section-field text-uppercase text-center mt-20">
                            <a class="button  btn-lg btn-theme full-rounded animated right-icn" href="step.html"><span> {{ form_widget(form.Save, {'attr': {'class': 'awe-btn awe-btn-1 awe-btn-medium' }}) }}<i class="glyph-icon flaticon-hearts" aria-hidden="true"></i></span></a>
                        </div><div class="clearfix"></div>


                    </div>
                        {{ form_end(form) }}
                        <div>
                        {{ form_start(form1) }}

                        <div class="section-field mb-30">
                            <div class="field-widget">
                                <i class="fa fa-briefcase" aria-hidden="true"></i>
                                {{ form_widget(form1.current_password, {'attr': {'class': 'input-text','placeholder':'current password' }}) }}
                            </div>
                        </div>
                            <div class="section-field mb-30">
                                <div class="field-widget">
                                    <i class="fa fa-briefcase" aria-hidden="true"></i>
                                    {{ form_widget(form1.plainPassword.first, {'attr': {'class': 'input-text','placeholder':'new password' }}) }}
                                </div>
                                <div class="section-field mb-30">
                                    <div class="field-widget">
                                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                                        {{ form_widget(form1.plainPassword.second, {'attr': {'class': 'input-text','placeholder':'new password again' }}) }}
                                    </div>
                                    <div class="field-input">
                                        <button class="awe-btn awe-btn-1 awe-btn-medium">Change Password</button>
                                    </div>
                            {{ form_end(form1) }}
                        </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </div>
    </section>

{% endblock %}